#用阿里云的纯净CentOS-7.4镜像
#全部安装包打包链接：https://
cd /root/LAMP
yum install -y wget bzip2 bzip2-devel zip unzip gcc gcc-c++ expat-devel libxml2-devel autoconf automake libtool re2c mod_ssl openssl openssl-devel libcurl-devel libmcrypt-devel git libjpeg-devel libpng-devel libpng freetype-devel gmp-devel readline-devel libxslt-devel flex php-mcrypt zlib-devel mcrypt libicu-devel systemd-devel mhash postgresql-devel libxslt
tar jxvf httpd-2.4.33.tar.bz2
tar jxvf apr-1.6.3.tar.bz2
tar jxvf nghttp2-1.32.0.tar.bz2
#tar jxvf php-5.6.36.tar.bz2
tar zxvf php-7.1.10.tar.gz
tar zxvf apr-util-1.6.1.tar.gz
unzip pcre-8.42.zip
unzip phpMyAdmin-4.8.1-all-languages.zip
mv apr-1.6.3 httpd-2.4.33/srclib/apr
mv apr-util-1.6.1 httpd-2.4.33/srclib/apr-util
#将解压后的apr-1.6.3，apr-util-1.6.1放到httpd-2.4.33/srclib下，用--with-included-apr指令会自动配置编译安装。
cd pcre-8.42
./configure --prefix=/root/LAMP/httpd-2.4.33/srclib/pcre
make&&make install

cd ../nghttp2-1.32.0
#自动配置，默认路径/usr/local/
autoreconf -i --force
automake
autoconf
./configure
make&&make install
echo '/usr/local/lib' >> /etc/ld.so.conf.d/local.conf
ldconfig
#装有http2的curl
cd ..
wget https://curl.haxx.se/download/curl-7.60.0.tar.gz
tar zxvf curl-7.60.0.tar.gz
cd curl-7.60.0
./configure --with-nghttp2=/usr/local
make&&make install
ldconfig

#安装apache
cd ../httpd-2.4.33/
./configure --prefix=/usr/local/apache24 --with-pcre=/root/LAMP/httpd-2.4.33/srclib/pcre --with-included-apr --with-ssl --with-nghttp2=/usr/local --with-mpm=worker --enable-modules=all --enable-mods-shared=all --enable-so --enable-ssl --enable-http2
make&&make install
mkdir /usr/local/apache24/cert


#cd ../php-5.6.36
#构建自动化配置 配置文件引入
#./buildconf --force
#./configure --prefix=/usr/local/php --with-apxs2=/usr/local/apache24/bin/apxs --with-pdo-mysql=mysqlnd --with-mysqli=mysqlnd --enable-mysqlnd --with-curl --enable-mbstring --with-openssl --with-mhash --enable-sockets --enable-soap --disable-fileinfo
#libtool --finish libs

cd ../php-7.1.10
./configure --prefix=/usr/local/php --with-apxs2=/usr/local/apache24/bin/apxs --with-curl --with-freetype-dir --with-gd --with-gettext --with-iconv-dir --with-kerberos --with-libdir=lib64 --with-libxml-dir --with-mysqli --with-openssl --with-pcre-regex --with-pdo-mysql --with-pdo-sqlite --with-pear --with-png-dir --with-xmlrpc --with-xsl --with-zlib --with-mhash --enable-fpm --enable-bcmath --enable-libxml --enable-inline-optimization --enable-gd-native-ttf --enable-mbregex --enable-mbstring --enable-opcache --enable-pcntl --enable-shmop --enable-soap --enable-sockets --enable-sysvsem --enable-xml --enable-zip --enable-mysqlnd
make&&make install
#php --ini        php -m
cp php.ini-development /usr/local/php/lib/php.ini


echo 'export PATH=$PATH:/root/LAMP/bin' >> /etc/profile
echo 'export PATH=$PATH:/usr/local/php/bin' >> /etc/profile
source /etc/profile


#移动phpmyadmin入默认目录
cd ..
mv phpMyAdmin-4.8.1-all-languages /usr/local/apache24/htdocs/phpMySQLAdmin-secret
chown -R daemon /usr/local/apache24/htdocs/phpMySQLAdmin-secret


#安装mysql8
cd /root/LAMP
wget  https://repo.mysql.com//mysql80-community-release-el7-1.noarch.rpm
rpm -ivh mysql80-community-release-el7-1.noarch.rpm --force --nodeps
yum install -y mysql-community-server
#启动mysqld服务并加入开机自启动
systemctl start mysqld.service
systemctl enable mysqld.service

#初始化配置文件
lamp-init

#获取临时登录密码
grep 'LAMP安装配置完毕！MySQL临时登录密码(temporary password):' /var/log/mysqld.log
